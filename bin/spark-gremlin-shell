#!/bin/bash

## Global script variables
FWDIR="$(cd `dirname $0`/..; pwd)"


if [ 1 != $(ls $FWDIR/target/scala-2.10/SparkGremlin-assembly-*.jar | wc -l) ]; then
	echo "Please compile SparkGremlin with ./sbt/sbt assembly"
	exit 1
fi

SGJAR=$(ls $FWDIR/target/scala-2.10/SparkGremlin-assembly-*.jar)

if [ -z "$SPARK_HOME" ]; then 
	echo "Please Define Spark HOME"
	exit 1
fi

export ADD_JARS=$SGJAR

$SPARK_HOME/bin/spark-shell -i $FWDIR/bin/spark-gremlin.init $*
